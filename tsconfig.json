{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"],
	"exclude": ["node_modules", "dist"]
}
