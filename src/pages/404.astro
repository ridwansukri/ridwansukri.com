---
import Layout from "../layouts/main.astro";
---

<Layout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <div class="text-center py-16">
      <!-- 404 Number -->
      <div class="relative inline-block mb-8">
        <h1 class="text-8xl md:text-9xl font-bold text-neutral-200 dark:text-neutral-800">
          404
        </h1>
        <div class="absolute inset-0 flex items-center justify-center">
          <span class="text-6xl md:text-7xl">ðŸ˜•</span>
        </div>
      </div>
      
      <!-- Error Message -->
      <h2 class="text-2xl md:text-3xl font-bold text-neutral-900 dark:text-neutral-100 mb-4">
        Hey Buddy, we have a problem.
      </h2>
      
      <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-8 max-w-md mx-auto">
        We couldn't find that link. Check the address or head back home.
      </p>
      
      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="/"
          class="inline-flex items-center px-5 py-2 text-sm font-medium text-white bg-neutral-900 dark:bg-neutral-100 dark:text-neutral-800 rounded-md hover:bg-neutral-700 dark:hover:bg-neutral-300 transition-colors duration-200"
        >
          <svg 
            class="w-4 h-4 mr-2" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M10 19l-7-7m0 0l7-7m-7 7h18"
            />
          </svg>
          Head back home
        </a>
        
        <a 
          href="/projects"
          class="inline-flex items-center px-5 py-2 text-sm font-medium text-neutral-700 dark:text-neutral-300 border border-neutral-300 dark:border-neutral-700 rounded-md hover:bg-neutral-50 dark:hover:bg-neutral-900 transition-colors duration-200"
        >
          View Projects
        </a>
      </div>
      
      <!-- Decorative Elements -->
      <div class="mt-16 relative">
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-64 h-64 bg-gradient-to-r from-blue-100 to-purple-100 dark:from-blue-900/20 dark:to-purple-900/20 rounded-full blur-3xl opacity-50"></div>
        </div>
        
        <!-- Suggested Links -->
        <div class="relative z-10 mt-8">
          <p class="text-sm text-neutral-500 dark:text-neutral-500 mb-4">
            You might be interested in:
          </p>
          <div class="flex flex-wrap gap-2 justify-center">
            <a 
              href="/about" 
              class="px-3 py-1 text-xs font-medium bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 rounded-full hover:bg-neutral-200 dark:hover:bg-neutral-700 transition-colors"
            >
              About Me
            </a>
            <a 
              href="/resume" 
              class="px-3 py-1 text-xs font-medium bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 rounded-full hover:bg-neutral-200 dark:hover:bg-neutral-700 transition-colors"
            >
              Resume
            </a>
            <a 
              href="/posts" 
              class="px-3 py-1 text-xs font-medium bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 rounded-full hover:bg-neutral-200 dark:hover:bg-neutral-700 transition-colors"
            >
              Blog Posts
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
