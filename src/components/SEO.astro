---
export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: 'website' | 'article' | 'profile';
  keywords?: string[];
  schema?: object;
}

const {
  title = 'Ridwan Sukri - DevOps & Cybersecurity Engineer',
  description = 'Professional portfolio showcasing DevOps, Cloud Engineering, and Cybersecurity expertise focused on security automation and infrastructure optimization in Asia Tech market.',
  canonical = Astro.url.href,
  ogImage = '/assets/images/photo.png',
  ogType = 'website',
  keywords = [
    'DevOps Engineer',
    'Cybersecurity Specialist',
    'Cloud Engineering',
    'AWS',
    'Security Automation',
    'Infrastructure Optimization',
    'Bug Bounty Hunter',
    'Asia Tech Market'
  ],
  schema
} = Astro.props;
---

<!-- Primary Meta Tags for Asia Tech Market -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content={keywords.join(', ')} />
<meta name="robots" content="index, follow" />
<meta name="language" content="English" />
<meta name="author" content="Ridwan Sukri" />
<meta name="geo.region" content="ID-SL" />
<meta name="geo.placename" content="Sulawesi Selatan, Indonesia" />

<!-- Canonical URL -->
<link rel="canonical" href={canonical} />

<!-- Open Graph / Facebook -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content={ogType} />
<meta property="og:url" content={canonical} />
<meta property="og:image" content={new URL(ogImage, Astro.url.origin).href} />
<meta property="og:site_name" content="Ridwan Sukri Portfolio" />
<meta property="og:locale" content="en_US" />

<!-- Twitter Cards -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL(ogImage, Astro.url.origin).href} />
<meta name="twitter:creator" content="@ridwansukri" />

<!-- Professional Schema Markup -->
{schema && (
<script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}

<!-- Performance DNS Prefetch -->
<link rel="dns-prefetch" href="//fonts.googleapis.com" />
<link rel="dns-prefetch" href="//cdn.jsdelivr.net" />
<link rel="dns-prefetch" href="//github.com" />
